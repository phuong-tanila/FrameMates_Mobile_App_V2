<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/MainListView"
    style="@style/formInputText"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:orientation="vertical"
    android:layout_marginBottom="20dp"
    android:padding="10dp">

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/timepicker_StudioImage"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:scaleType="centerCrop"
            android:src="@drawable/placeholder_image" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="10dp"
            android:paddingEnd="10dp">

            <TextView
                android:textColor="#6e825f"
                android:id="@+id/timepicker_StudioName"
                style="@style/textBlackHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="Artium"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/timepicker_StudioDescription"
                style="@style/textBlackHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:textColor="#404040"
                android:maxLines="1"
                android:text="Vintage"
                android:textSize="18sp"
                android:textStyle="normal" />
        </LinearLayout>

        <TextView
            android:id="@+id/timepicker_StudioPrice"
            style="@style/textBlackHeader"
            android:layout_width="140dp"
            android:layout_height="90dp"
            android:gravity="end"
            android:textColor="#4d4d4d"
            android:paddingEnd="10dp"
            android:text="1.2000.0000 VND"
            android:textSize="16sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginStart="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/timepicker_StudioTime"
            style="@style/textBlackHeader"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:maxLines="1"
            android:text="10:00 - 13:00"
            android:textSize="18sp"
            android:textStyle="bold" />

        <CheckBox
            android:id="@+id/timepicker_CheckBox"
            android:layout_width="40dp"
            android:layout_height="match_parent" />
    </LinearLayout>


</LinearLayout>
